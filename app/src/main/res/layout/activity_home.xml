<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="com.example.haroutine_android.ui.hyunmyeong.HomeActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/salah"
        tools:context=".ui.hyunmyeong.HomeActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.78"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="이름을 입력해주세요."
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginHorizontal="18dp"
            app:layout_constraintTop_toTopOf="@id/gl"
            android:background="@drawable/buttondesign2"/>

        <Button
            android:id="@+id/bt"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#A881FF"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>