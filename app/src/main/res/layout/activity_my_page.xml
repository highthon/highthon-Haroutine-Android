<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".ui.hyunmyeong.MyPageActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/search_background"
            app:layout_constraintEnd_toStartOf="@+id/btn_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/pretendard_bold"
                android:hint="마이페이지"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Autofill,RtlSymmetry,TextFields" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="18dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 작성한 게시글"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_search"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/hiitsme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/mine"
            android:background="@drawable/routine_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:text="안녕하세요 접니다." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="저는 반에서 3등을 하는 모범생입니다. 제가 어떤 식으로 공부하는지 공유 해드리겠습니다.!"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#이게  #나야ㅋ"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginBottom="5dp"
                android:textColor="#5891FF"/>

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지인호 5:00 am - 11:00 pm"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"/>

        </LinearLayout>

        <TextView
            android:id="@+id/perform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 하고있는 루틴"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/hiitsme"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="25dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/perform"
            android:background="@drawable/routine_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:text="수험생 운동 루틴" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="현재 고3 수능준비하고있는 수험생입니다.\n모의고사 100점의 비결을 알고싶다면?!"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#수험생  #열공"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginBottom="5dp"
                android:textColor="#5891FF"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지인호 9:00 am - 10:00 pm"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>